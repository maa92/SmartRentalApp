    <!-- ENDS Fancybox -->


</head>

<body class="home">
    <!-- HEADER -->
    <div id="header">
        <!-- wrapper-header -->
        <div class="wrapper">
            <div style="padding-top: 50px;">
                <a href="/" style="color: white; font-size: 22pt; text-decoration: none">Smart Rental Guide</a>
            </div>
            <!-- search -->
            <div class="top-search">
                @using (Html.BeginForm("QuickSearch", "RealEState", FormMethod.Get, new { @id = "searchform" }))
                {
                    <div>
                        <input type="text" placeholder="Search..." name="searchKey" id="s" />
                        <input type="submit" id="searchsubmit" value=" " />
                    </div>
                }
            </div>
            <!-- ENDS search -->
        </div>
        <!-- ENDS wrapper-header -->
    </div>
    <!-- ENDS HEADER -->
    <!-- Menu -->
    <div id="menu">



        <!-- ENDS menu-holder -->
        <div id="menu-holder">
            <!-- wrapper-menu -->
            <div class="wrapper">
                <!-- Navigation -->
                <ul id="nav" class="sf-menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Search", "AdvancedSearch", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Users", "Index", "Users")</li>
                        <li>@Html.ActionLink("Spam", "SpamComment", "RealEState")</li>
                    }
                    else if (User.Identity.IsAuthenticated && User.IsInRole("Agent"))
                    {
                        <li>@Html.ActionLink("Real Estates", "Index", "RealEState")</li>
                    }
                    else if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
                    {
                        <li>@Html.ActionLink("Subscriptions", "ShowSubscriptions", "RealEState")</li>
                    }
                    @Html.Partial("_LoginPartial")
                </ul>
                <!-- Navigation -->
            </div>
            <!-- wrapper-menu -->
        </div>
        <!-- ENDS menu-holder -->
    </div>
    <!-- ENDS Menu -->
    <!-- Slider -->
    @if (ViewBag.ShowSlider)
    {
        <div id="slider-block">
            <div id="slider-holder">
                <div id="slider">
                    <a href="/"><img src="~/images/01.png" title="Visit my web site regularly and get freebies each week!" alt="" /></a>
                    <a href="/"><img src="~/images/02.png" title="Support the freebies buying high quality premium themes from my portfolio at themeforest" alt="" /></a>
                </div>
            </div>
        </div>
    }
    <!-- ENDS Slider -->
    <!-- MAIN -->
    <div id="main">
        <!-- wrapper-main -->
        <div class="wrapper">

            <!-- headline -->
            <div class="clear"></div>
            @*<div id="headline">
                    <span class="main">Welcome to Smart Rental App</span>
                    <span class="sub">Need a professional and sleek html web site design. Try nova is free and easy to use.</span>
                    <a href="http://luiszuno.com/blog/downloads/nova-html-template" id="link" class="link-button-big"><span>Download Nova</span></a>
                </div>*@
            <!-- ENDS headline -->
            <!-- content -->
            <div id="content">
                @*<div id="page-content">*@
                @RenderBody()
                @*</div>*@
            </div>
            <!-- ENDS content -->
        </div>
        <!-- ENDS wrapper-main -->
    </div>
    <!-- ENDS MAIN -->
    <!-- FOOTER -->
    <div id="footer">
        <!-- wrapper-footer -->
        <!-- ENDS wrapper-footer -->
    </div>
    <!-- ENDS FOOTER -->
    <!-- Bottom -->
    <div id="bottom">
        <!-- wrapper-bottom -->
        <div class="wrapper">
            <div id="bottom-text">@DateTime.Now.Year all rights reserved. <a href="/">smart rental</a> </div>
            <!-- Social -->
            <ul class="social ">
                <li><a href="http://www.facebook.com" class="poshytip  facebook" title="Become a fan"></a></li>
                <li><a href="http://www.twitter.com" class="poshytip twitter" title="Follow our tweets"></a></li>
                <li><a href="http://www.dribbble.com" class="poshytip dribbble" title="View our work"></a></li>
                <li><a href="http://www.addthis.com" class="poshytip addthis" title="Tell everybody"></a></li>
                <li><a href="http://www.vimeo.com" class="poshytip vimeo" title="View our videos"></a></li>
                <li><a href="http://www.youtube.com" class="poshytip youtube" title="View our videos"></a></li>
            </ul>
            <!-- ENDS Social -->
            <div id="to-top" class="poshytip" title="To top"></div>
        </div>
        <!-- ENDS wrapper-bottom -->
    </div>
    <!-- ENDS Bottom -->

</body>
</html>